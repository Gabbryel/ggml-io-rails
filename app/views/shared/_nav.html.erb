<header
  class="fixed inset-x-0 top-0 z-50 font-font-main text-dark-green bg-white"
  data-controller="side-menu"
>
  <nav
    class="relative mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <%= link_to 'ggml.io', root_path, class: '-m-1.5 p-1.5 text-md/6' %>
    </div>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 z-55 cursor-pointer"
        data-action="click->side-menu#open"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="size-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="#000000"
          aria-hidden="true"
          data-slot="icon"
          data-side-menu-target="burger"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
          />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to 'feed', feed_path,  class: "text-md/6 text-dark-green font-semibold hover:bg-white hover:text-red-900 px-6 py-1 rounded #{ request.path == "/feed" ? 'bg-white text-red-900' : '' }" %>
      <%= link_to 'posts', posts_path, class: "text-md/6 font-semibold hover:bg-white hover:text-red-900 px-6 py-1 rounded #{ request.path == "/posts" ? 'bg-white text-red-900' : '' }" %>
      <%= link_to 'slugs', "#", class: "text-md/6 font-semibold hover:bg-white hover:text-red-900 px-6 py-1 rounded #{ request.path == "/slugs" ? 'bg-white text-red-900' : '' }" %>
      <%= link_to 'admin', admin_posts_path, class: "text-md/6 font-semibold hover:bg-white hover:text-red-900 px-6 py-1 rounded #{ request.path == "/slugs" ? 'bg-white text-red-900' : '' }" %>
      <% if current_user %>
        <%= link_to 'admin' , admin_posts_path , class: "text-md/6 font-semibold hover:bg-white hover:text-red-900 px-6 py-1 rounded" %>
      <% end %>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <% if current_user %>
        <%= button_to 'Sign out' , destroy_user_session_path, class: "text-md/6 font-semibold" , method: :delete %>
          <% else %>
            <%= link_to 'Sign in' , new_user_session_path, class: "text-md/6 font-semibold
            cursor-pointer" %>
              <% end %>
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="lg:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50"></div>
    <div
      class="fixed hidden inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white text-black px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
      data-side-menu-target="menu"
    >
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <p class="text-white">ggml.io</p>
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700 cursor-pointer"
          data-action="click->side-menu#close"
        >
          <span class="sr-only text-black">Close menu</span>
          <svg
            class="size-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
            data-slot="icon"
            data-action="click->side-menu#close"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18 18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <%= link_to 'feed', feed_path, class: "-mx-3 block rounded-lg px-3
            py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>
            <%= link_to 'posts', posts_path, class: "-mx-3 block rounded-lg px-3
            py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>
            <%= link_to 'slugs', posts_path, class: "-mx-3 block rounded-lg px-3
            py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>
          </div>
          <div class="py-6">
            <% if current_user %> <%= button_to 'Sign out',
            destroy_user_session_path, class: "-mx-3 block rounded-lg px-3
            py-2.5 text-base/7 font-semibold text-gray-900 hover:bg-gray-50",
            method: :delete %> <% else %> <%= link_to 'Sign in',
            new_user_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5
            text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %> <% end
            %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
